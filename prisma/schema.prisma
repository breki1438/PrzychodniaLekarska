generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Patient {
  id     Int           @id @default(autoincrement())
  name   String
  pesel  String        @unique
  phone  String
  email  String        @unique
  gender String
  visits Appointment[]
}

model Appointment {
  id        Int      @id @default(autoincrement())
  date      DateTime
  patientId Int
  patient   Patient  @relation(fields: [patientId], references: [id])
  doctorId  Int
  doctor    Doctor   @relation(fields: [doctorId], references: [id])
}

model Doctor {
  id           Int           @id @default(autoincrement())
  name         String
  specialty    String
  appointments Appointment[]
}
